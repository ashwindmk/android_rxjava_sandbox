<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Rx-Java"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_publish_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT PUBLISH"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_unicast_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT UNICAST"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_behavior_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT BEHAVIOR"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_async_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT ASYNC"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_replay_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT REPLAY"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/subject_single_button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="SUBJECT SINGLE"
        android:layout_marginBottom="24dp" />

</LinearLayout>